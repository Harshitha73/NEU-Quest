<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/button_color</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color</item>
        <item name="colorSecondaryVariant">@color/button_color</item>
        <item name="colorOnSecondary">@color/button_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
